{
   "compilerOptions": {
       "module": "commonjs",
       "skipLibCheck": true,
       "strictNullChecks": false,
       "target": "es2017",
       "removeComments": true,
       "noImplicitThis": true,
       "inlineSourceMap": true,
       "moduleResolution": "node",
       "allowJs": true,
       "checkJs": false,
       "outDir": "dist"
   },
   "include": [
       "src"
   ],
   "exclude": [
       "node_modules"
   ]
}